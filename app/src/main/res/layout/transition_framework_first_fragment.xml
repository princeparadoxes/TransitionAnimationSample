<android.support.design.widget.CoordinatorLayout
    android:id="@+id/main_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:paddingBottom="?actionBarSize"
    tools:context=".MainActivity">


    <FrameLayout
        android:id="@+id/transition_framework_first_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <View
            android:id="@+id/transition_framework_first_change"
            android:layout_width="@dimen/norm_size"
            android:layout_height="@dimen/norm_size"
            android:layout_gravity="center_horizontal|top"
            android:background="@android:color/holo_green_dark"/>
    </FrameLayout>


    <android.support.design.widget.FloatingActionButton
        android:id="@+id/transition_framework_first_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:layout_margin="@dimen/fab_margin"
        android:src="@drawable/ic_add_white_24dp"/>
</android.support.design.widget.CoordinatorLayout>
